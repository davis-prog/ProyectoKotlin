<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="match_parent"
             tools:context=".Views.Fragments.Tabs.FirstFragment">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <com.synnapps.carouselview.CarouselView
                        android:id="@+id/carouselView"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:fillColor="#FFFFFFFF"
                        app:pageColor="#00000000"
                        app:radius="6dp"
                        app:slideInterval="3000"
                        app:strokeColor="#FF777777"
                        android:hardwareAccelerated="false"
                        android:largeHeap="true"
                        app:strokeWidth="1dp">
                </com.synnapps.carouselview.CarouselView>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerView_first_category"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:padding="5dp">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                        android:text="Easy breakfast"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_width="match_parent"
                        android:textStyle="normal|bold"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerView_first_breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:padding="5dp">

                </androidx.recyclerview.widget.RecyclerView>


                <TextView
                        android:text="Learn how to"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_width="match_parent"
                        android:textStyle="normal|bold"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerView_first_Learn"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:padding="5dp">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>